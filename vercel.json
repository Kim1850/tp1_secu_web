{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "env": {
    "DATABASE_URL": "file:./prisma/dev.db"  // You can use SQLite here during development. For production, use a hosted database like PostgreSQL.
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10,  // Max duration for serverless functions (adjust as needed)
      "memory": 1024  // Memory allocated to each function (adjust as needed)
    }
  }
}
